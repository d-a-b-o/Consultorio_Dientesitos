@model WebDientesitos.Models.DatosCita
@{
    Layout = "LayoutPaciente";
}
<head>
    <link rel="stylesheet" href="~/css/PintarBoton.css">
</head>
<body>
    <div class="container">
        <h1>Editar Cita</h1>
        @if (ViewData["Mensaje"] != null)
        {
            <div class="form-group">
                <div class="alert alert-danger" role="alert">
                    Editar la fecha de la cita a menos de 7 días de la misma, conlleva a una penalización.
                </div>
            </div>
        }
        <form asp-controller="Paciente" asp-action="EditarCita" asp-route-citaId="@Model.citaDental.Idcita" method="post">
            <div class="form-group">
                <label for="sede">Sede</label>
                <textareatype type="text" class="form-control">@Model.citaDental.IdsedeNavigation.Direccion</textareatype>
            </div>

            <div class="form-group">
                <label for="servicio">Servicio a Tratar</label>
                <textareatype type="text" class="form-control">@Model.citaDental.IdtratamientoNavigation.Nombre</textareatype>
            </div>

            <div class="form-group">
                <label for="doctor">Doctor</label>
                <textareatype type="text" class="form-control">@Model.citaDental.IddoctorNavigation.Nombre @Model.citaDental.IddoctorNavigation.ApellidoPaterno</textareatype>
            </div>

            <div class="form-group">
                <label for="fecha">Fecha</label>
                <input type="date" class="form-control" name="fecha" min="@DateTime.Now.AddDays(7).ToString("yyyy-MM-dd")" value="@DateTime.Now.ToString(" yyyy-MM-dd")">
            </div>

            <div class="form-group">
                <label for="horario">Hora</label>
                <input type="time" class="form-control" name="hora" value="@Model.citaDental.Hora">
            </div>

            <button type="submit" class="btn btn-primary">Editar</button>
            <a class="btn btn-primary" asp-action="CancelarCita" asp-route-IDCita="@Model.citaDental.Idcita">Cancelar Cita</a>
        </form>
    </div>
</body>